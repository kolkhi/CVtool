{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build debug main",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-O0",
        "-Wall",
        "-Wunused",
        "-Wno-format-y2k",
        "-fno-exceptions",
        "-fno-strict-aliasing",
        "-ffunction-sections",
        "-fdata-sections",
        "./src/main.cpp",
        "./src/main_panel.cxx",
        "./src/render_panel.cxx",
        "./src/ui_controller.cpp",
        "-I\"./includes\"",
        "-I\"./fltk/\"",
        "-o",
        "./build/CVtool",
        "-static-libgcc",
        "-static-libstdc++",
        "-L\"./fltk/lib\"",
        "-L\".\"",
        "-lfltk",
        "-lfltk_forms",
        "-lfltk_images",
        "-lfltk_gl",
        "-lfltk_png",
        "-lfltk_z",
        "-lfltk_jpeg",
        "-lglu32",
        "-lopengl32",
        "-lole32",
        "-luuid",
        "-lcomctl32",
        "-lws2_32",
        
        "-mwindows",
        "-DWIN32",
        "-DUSE_OPENGL32",
        "-D_LARGEFILE_SOURCE",
        "-D_LARGEFILE64_SOURCE"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
